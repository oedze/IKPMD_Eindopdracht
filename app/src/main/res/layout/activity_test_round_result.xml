<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestRoundResultActivity">

    <Button
        android:id="@+id/button_roundresult_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="31dp"
        android:text="Opslaan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progress_roundresult"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="222dp"
        android:layout_height="214dp"
        android:background="@drawable/circle_shape"
        android:progress="50"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/text_roundresult_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="155dp"
        android:text="Resultaat"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_roundresult_passed"
        android:layout_width="121dp"
        android:layout_height="79dp"
        android:text="10/10\nPassed"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <ScrollView
        android:id="@+id/scroll_roundresult_tests"
        android:layout_width="408dp"
        android:layout_height="230dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button_roundresult_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_roundresult"
        app:layout_constraintVertical_bias="0.648">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_roundresult_passed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_roundresult_test_passed_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test01"
                    android:textAlignment="center"
                    android:textColor="@color/colorTestPassed"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_roundresult_skipped"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_roundresult_test_skipped_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test03"
                    android:textAlignment="center"
                    android:textColor="@color/colorTestSkipped"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_roundresult_failed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.333"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_roundresult_test_failed_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test02"
                    android:textAlignment="center"
                    android:textColor="@color/colorTestFailed"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_roundresult_passed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:text="Passed"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_roundresult_tests"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_roundresult_failed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="12dp"
        android:text="Failed"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_roundresult_tests"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_roundresult_skipped_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Skipped"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_roundresult_tests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>