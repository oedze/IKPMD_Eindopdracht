<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestStartActivity">

    <Button
        android:id="@+id/button_teststart_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="31dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_teststart_prerequisites"
        android:layout_width="319dp"
        android:layout_height="119dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="172dp"
        android:text="Prerequisites"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_teststart_reviewer" />

    <TextView
        android:id="@+id/text_teststart_reviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Reviewed by Adolf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_teststart_author" />

    <TextView
        android:id="@+id/text_teststart_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="Version 1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_teststart_name" />

    <TextView
        android:id="@+id/text_teststart_name"
        android:layout_width="165dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="72dp"
        android:text="testname"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_teststart_description"
        android:layout_width="319dp"
        android:layout_height="119dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="in deze test gaan we kijken of je moeder lol haha funny xd these are the forces of evil these are my nuts"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_teststart_reviewer" />

    <TextView
        android:id="@+id/text_teststart_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:text="Written by Tim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_teststart_name" />

</androidx.constraintlayout.widget.ConstraintLayout>